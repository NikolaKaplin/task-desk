generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    firstName String
    lastName String
    email String @unique
    password String
    role UserRole @default(UNVERIFIED)
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
}

enum UserRole {
  USER
  ADMIN
  UNVERIFIED
}
